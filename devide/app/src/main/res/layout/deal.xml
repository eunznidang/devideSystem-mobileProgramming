<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/mybutton_none"
        android:backgroundTint="@color/초록"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/customerName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/네이비"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sentence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/베이지"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/네이비"
                    android:textSize="16sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/베이지" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text=" ,  "
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/베이지" />
                <TextView
                    android:id="@+id/memo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/nanumsquare_exbold"
                    android:textColor="@color/베이지" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/베이지"
                android:clickable="true"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/네이비" />

            <TextView
                android:id="@+id/o"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:backgroundTint="@color/네이비"
                android:clickable="true"
                android:fontFamily="@font/nanumsquare_exbold"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/베이지" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/state_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:src="@drawable/noti"
        android:background="@drawable/mybutton_none"
        android:visibility="invisible"
        android:backgroundTint="@color/연두" />

</FrameLayout>